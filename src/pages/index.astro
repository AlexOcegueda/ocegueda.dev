---
import Layout from "../layouts/layout.astro";
import background from "../layouts/background.astro";
---
<style>
	h1  {
		font-size: 8rem;
		padding-bottom: 3rem;
		margin-left: .5rem;
	}
	
	h2 {
		display: flex;
		align-self: flex-end;
	}
	sup {
		font-size: 3rem;
	}
  
  nav {
    height: 100vh;
    display: flex;
    align-content: center;
  }
  
	.castro {
		display: block;
		text-align: right;
		font-size: 4rem;
		margin-right: 2rem;
	}

	p {
		display: block;
		margin-left: 4rem;
		margin-right: 2rem;
		padding-right: 2rem;
		padding-top: 2rem;
		width: 50%;
		line-height: 1.3rem;
		text-align: right;	
}
	.intro-container {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.ascii-art {
		font-family: monospace;    /* mandatory â€” keeps all characters equal width */
		white-space: pre;          /* preserves spacing and line breaks */
		font-size: 20px;           /* shrink until the full art fits nicely */
		line-height: 1;            /* removes extra vertical spacing */
		letter-spacing: 0;         /* makes sure no horizontal gaps are added */
		position: fixed;           /* locks it in place on the screen */
		z-index: 9999;
		color: #0ff;
		background: none;
	}
  
  .project-nav-item {
    font-size: 1rem;
    font-weight: 100;
    list-style: none;
    display: block;
    text-decoration: none;
 		cursor: pointer;
	}
</style>

	<Layout title="Home">
		<h1><b>OCEGUEDA</b><sup>.dev</sup></h1>
			<nav class="intro-container">
        <h2><i class="castro">Castro<i></h2>
        <ul> 
          <li><a class="project-nav-item">IT / Networking</a></li>
					<li><a class="project-nav-item">Programming</a></li>
          <li><a class="project-nav-item">Mathematics</a></li>
          <li><a class="project-nav-item">Writing</a></li>
			 	  <li><a class="project-nav-item">Art</a></li>
				</ul>
      </nav>
	</Layout>

